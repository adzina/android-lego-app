<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/row2">


    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/background_light" />

    <TextView
        android:id="@+id/textItemID"
        android:layout_width="wrap_content"
        android:layout_height="50px"
        android:layout_alignBottom="@+id/itemImage"
        android:layout_toEndOf="@+id/itemImage" />

    <Button
        android:id="@+id/buttonDown"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignBottom="@+id/textItemID"
        android:layout_toStartOf="@+id/textQuantity"
        android:text="-" />

    <TextView
        android:id="@+id/textQuantity"
        android:layout_width="60px"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonDown"
        android:layout_toStartOf="@+id/buttonUp"
        android:text="TextView" />

    <Button
        android:id="@+id/buttonUp"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignBottom="@+id/textQuantity"
        android:layout_toStartOf="@+id/textItemName"
        android:text="+" />

    <TextView
        android:id="@+id/textItemName"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_alignBottom="@+id/textQuantity"
        android:layout_alignParentEnd="true"
        android:text="TextView" />
</RelativeLayout>